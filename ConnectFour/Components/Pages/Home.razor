@page "/"

<div class="grid grid-cols-7 gap-1">
    @foreach (var i in Enumerable.Range(0, 6))
    {
        @foreach (var j in Enumerable.Range(0, 7))
        {
            <div signalr-subscribe="mark-move-@i-@j">
                <div
                    id="cell-@i-@j"
                    class="aspect-square p-1 border-2 rounded text-center hover:bg-sky-700"
                    hx-post="move"
                    hx-swap="none"
                    hx-vals='js:{playerId: sessionStorage.getItem("PlayerId"), gameId: sessionStorage.getItem("GameId"), columnNumber: @j}'>
                </div>
            </div>
        }
    }
</div>