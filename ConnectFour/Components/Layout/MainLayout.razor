@inherits LayoutComponentBase

<div class="page">
    <div class="flex w-full px-4 pb-2 pt-4 max-w-md mx-auto">
        <NavMenu/>
    </div>

    <main>
        <div id="score" class="w-full px-4 py-2 text-center max-w-md mx-auto">
            <div class="text-2xl border-2 rounded py-2"> 1 / 3 / 6 </div>
        </div>
        <div id="board" class="w-full px-4 py-2 max-w-md mx-auto">
            @Body
        </div>

        <div id="actions" class="flex justify-around w-full px-4 py-2 columns-2 gap-4 max-w-md mx-auto">
            <div class="p-1 w-full border-2 rounded">
                <img src="undo.svg" alt="undo" class="aspect-square max-h-10 mx-auto"/>
            </div>
            <div class="p-1 w-full border-2 rounded">
                <img src="resign.svg" alt="resign" class="aspect-square max-h-10 mx-auto"/>
            </div>
        </div>
    </main>
</div>

