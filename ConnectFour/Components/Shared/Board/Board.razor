<div id="board" class="w-full px-4 py-2 max-w-md mx-auto">
    <div class="grid grid-cols-7 gap-1">
        @foreach (var i in Enumerable.Range(0, 6))
        {
            @foreach (var j in Enumerable.Range(0, 7))
            {
                <div signalr-subscribe="mark-move-@i-@j">
                    <div
                        id="cell-@i-@j"
                        class="aspect-square nm-hole rounded"
                        signalr-send="makeMove"
                        hx-swap="none"
                        hx-vals='js:{gameId: getGameIdFromPath(), columnNumber: "@j"}'>
                    </div>
                </div>
            }
        }
    </div>
</div>