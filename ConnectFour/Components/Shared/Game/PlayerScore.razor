@using ConnectFour.Models

<div id="player-score" class="w-full px-4 py-2 text-center max-w-md mx-auto">
    <div id="player-score-value"
         class="text-2xl nm-hole rounded py-2"
         hx-post="/score"
         hx-vals="js:{playerId: sessionStorage.getItem('PlayerId')}"
         hx-trigger="load">
        0 / 0 / 0
    </div>
    
    <div id="player-score-updated-hack" signalr-subscribe="player-score-updated"></div>
</div>

@code {

    [Parameter]
    public PlayerId PlayerId { get; set; }

}